<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorCard"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/event_card_colour"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/maroon">

            <TextView
                android:id="@+id/event_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="test_title"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:textSize="24sp"
                android:padding="8dp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_condensed_bold"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_card_shortdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="test_short_description"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:fontFamily="@font/roboto_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/event_card_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="test_time"
                        android:padding="8dp"
                        android:fontFamily="@font/roboto_italic" />

                    <TextView
                        android:id="@+id/event_card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="test_date"
                        android:padding="8dp"
                        android:fontFamily="@font/roboto_italic"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
