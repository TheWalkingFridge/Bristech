<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/event_card_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/event_time"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/event_card_date"
        app:layout_constraintTop_toBottomOf="@+id/event_card_shortdescription" />

    <TextView
        android:id="@+id/event_card_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/event_card_shortdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_regular"
        android:paddingBottom="8dp"
        android:text="test_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_card_bg" />

    <TextView
        android:id="@+id/event_card_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"/>

    <View
        android:id="@+id/event_card_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/maroon"
        android:contentDescription="@string/no_description_set"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/event_card_topic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="test_title"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size"
        app:layout_constraintBottom_toBottomOf="@+id/event_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/event_card_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_card_date"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="test_date"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_card_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/event_card_time"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
