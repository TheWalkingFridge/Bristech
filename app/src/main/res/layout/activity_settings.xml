<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bristech.bristech.activities.SettingsActivity">


    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/app_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/settings"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!--/    app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/settings_linear_layout_top"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:gravity="center_horizontal"
            android:onClick="logOutBtnPress"
            android:paddingTop="10dp"
            android:text="@string/btn_log_out"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/btn_modify_interests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:gravity="center_horizontal"
            android:onClick="modifyInterestsBtnPress"
            android:paddingTop="10dp"
            android:text="@string/modify_interests"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/btn_edit_user_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:gravity="center_horizontal"
            android:onClick="editUserSettingsBtnPress"
            android:paddingTop="10dp"
            android:text="@string/user_settings"
            android:textColor="@color/cardview_light_background" />

    </LinearLayout>

</RelativeLayout>
